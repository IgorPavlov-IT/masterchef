<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!--Kommenteerimise formaat-->
    <!--Siit algab esimene changeSet-->
    <changeSet id="" author="">
        <createTable tableName="recipe_ingredient">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="recipe_list_id" type="int">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="ingredient_id" type="int">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="qty" type="int">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="unit" type="text">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="sign_up">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="first_name" type="text">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="last_name" type="text">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="username" type="text">
                <constraints nullable="false" primaryKey="false" unique="true"/>
            </column>
            <column name="password" type="text">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="ingredients">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false" primaryKey="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="recipe">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="cooking_time" type="text">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="type" type="text">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="notes" type="text">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="picture" type="text">  <!-- Kas URL vÃµi pildi tabel? Kas vaja siia? -->
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="instruction" type="text">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="meal_type">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false" primaryKey="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="cooking_time">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false" primaryKey="false" unique="true"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>